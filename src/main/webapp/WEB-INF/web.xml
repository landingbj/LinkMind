<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="true">

	<context-param>
		<param-name>version</param-name>
		<param-value>2401020054</param-value>
	</context-param>

	<welcome-file-list>
		<welcome-file>chat.jsp</welcome-file>
	</welcome-file-list>

	<mime-mapping>
		<extension>jnlp</extension>
		<mime-type>application/x-java-jnlp-file</mime-type>
	</mime-mapping>

	<filter>
		<filter-name>SSOFilter</filter-name>
		<filter-class>ai.utils.SSOFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SSOFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SSOFilter</filter-name>
		<url-pattern>/gateway/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SSOFilter</filter-name>
		<url-pattern>/common/*</url-pattern>
	</filter-mapping>

	<!-- 跨域 -->
	<filter>
		<filter-name>CORS</filter-name>
		<filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
		<init-param>
			<param-name>cors.allowOrigin</param-name>
			<param-value>*</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportedMethods</param-name>
			<param-value>GET,POST,HEAD,PUT,DELETE</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportedHeaders</param-name>
			<param-value>Accept,Origin,X-Requested-With,Content-Type,Last-Modified</param-value>
		</init-param>
		<init-param>
			<param-name>cors.exposedHeaders</param-name>
			<param-value>Set-Cookie</param-value>
		</init-param>
		<init-param>
			<param-name>cors.supportsCredentials</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CORS</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>search</servlet-name>
		<servlet-class>ai.servlet.SearchServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>search</servlet-name>
		<url-pattern>/search/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>ai.servlet.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/imageToText</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/generateVideo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/generateImage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image/enhanceImage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>pageInfo</servlet-name>
		<servlet-class>ai.servlet.PageInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pageInfo</servlet-name>
		<url-pattern>/info/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UploadFile</servlet-name>
		<servlet-class>ai.servlet.UploadFileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UploadFile</servlet-name>
		<url-pattern>/uploadFile/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>audio</servlet-name>
		<servlet-class>ai.servlet.AudioServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>audio</servlet-name>
		<url-pattern>/audio/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>video</servlet-name>
		<servlet-class>ai.servlet.VideoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>video</servlet-name>
		<url-pattern>/video/motInference</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>video</servlet-name>
		<url-pattern>/video/mmeditingInference</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>user</servlet-name>
		<servlet-class>ai.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>user</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>llm</servlet-name>
		<servlet-class>ai.servlet.api.LlmApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>llm</servlet-name>
		<url-pattern>/v1/chat/completions</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>asr</servlet-name>
		<servlet-class>ai.servlet.api.AudioApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>asr</servlet-name>
		<url-pattern>/v1/asr</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>tts</servlet-name>
		<servlet-class>ai.servlet.api.AudioApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>tts</servlet-name>
		<url-pattern>/v1/tts</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>image_api</servlet-name>
		<servlet-class>ai.servlet.api.ImageApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>image_api</servlet-name>
		<url-pattern>/v1/images/generations</url-pattern>
	</servlet-mapping>
</web-app>